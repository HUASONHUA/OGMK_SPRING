<?xml version="1.0" encoding="UTF-8"?>
<web-app 
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" 
version="4.0" metadata-complete="false">
  <display-name>OGKM_Web</display-name>
  
  <servlet>
  <description>登入驗證碼</description>
  <servlet-name>LoginCaptchaServlet</servlet-name>
  <servlet-class>org.ogkm.Web.view.CaptchaServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  <servlet-name>LoginCaptchaServlet</servlet-name>
  <url-pattern>/images/logincaptcha.png</url-pattern>
  </servlet-mapping>
  
  <servlet>
  <description>註冊驗證碼(6碼)</description>
  <servlet-name>RegisterCaptchaServlet</servlet-name>
  <servlet-class>org.ogkm.Web.view.CaptchaServlet</servlet-class>
 <init-param>
   <param-name>len</param-name>
   <param-value>6</param-value>
 </init-param>
  </servlet>
  
  <servlet-mapping>
  <servlet-name>RegisterCaptchaServlet</servlet-name>
  <url-pattern>/images/registercaptcha.png</url-pattern>
  </servlet-mapping>
  
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  
  <error-page>
  <error-code>404</error-code>
  <location>/WEB-INF/error_page/404.jsp</location>
  </error-page>
  <session-config>
   <session-timeout>30</session-timeout>
  </session-config>

